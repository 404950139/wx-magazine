page {
    width:100%;
    height:100%;
}
.container {
    width:100%;
}
.video {
    width:700rpx;
    height:400rpx;
}
.poster-container {
    position:relative;
    width:700rpx;
    height:400rpx;
}
.poster {
    width:100%;
    height:100%;
}
.controler {
    position:absolute;
    top:50%;
    left:50%;
    margin-top:-50rpx;
    margin-left:-50rpx;
    display:flex;
    flex-direction:column;
    justify-content:center;
    align-items: center;
    border-radius:50%;
    background-color:rgba(0, 0, 0, .6);
    width:100rpx;
    height:100rpx;
}
.play-btn {
    width:30rpx;
    height:30rpx;
}
.duration {
    font-size:24rpx;
    color:#fff;
}
.main-title {
    font-size:40rpx;
    padding:20rpx;
}
.mask {
    position:fixed;
    top:0;
    left:0;
    bottom:0;
    right:0;
    background-color:rgba(0, 0, 0, .6);
}